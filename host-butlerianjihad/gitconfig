[merge]
	tool = vimdiff
	tool = prompt
	conflictstyle = diff3
[user]
	name = Richard Moorhead
	email = richard.moorhead@c2fo.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
    autocrlf = input
[credential]
	helper = osxkeychain
[alias]
    send = "!f() { git commit -a -m $1 && git push origin `git rev-parse --abbrev-ref HEAD`; }; f"
    amend = "!f() { git commit --amend -C HEAD && git push -f origin `git rev-parse --abbrev-ref HEAD`; }; f"
    g = grep --break --heading --line-number
    remtags = "!f() { for t in `git tag`; do git push origin :$t ; git tag -d $t; done }; f"
    rembranches = "!f() { for b in `git branch | grep -v \\* | grep -v master | grep -v develop`; do git branch -D $b; done }; f"
[grep]
	extendedRegexp = true
	lineNumber = true
[push]
	default = simple
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
